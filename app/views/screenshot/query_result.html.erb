<style>

body, p, td, th, li
{
	font-size: 90%;
	color: #333333;
	font-family: Arial,Helvetica,sans-serif;
}
	
#matches {
	height: 550px;
	width: 700px;
	overflow: auto;
	border: 1px solid #cccccc;
}	


.photo img{
	border: 1px #cccccc solid;
	padding: 2px;
}

.odd {
	background-color:  #E9E9E9;
}


.url {
	color: #008200;
}

.title {
	font-size: 14px;
}

</style>


<table>
	<th>Query</th>
	<th>Result</th>
		
	<tr>
	<td valign="top">
<div id="query" class='photo'>


<a href="<%=@query.photo.url(:original)%>" rel="lightbox" title="Query image">
<%= image_tag @query.photo.url(:medium) %>
</a>

</div>

</td><td>	
<div id="matches">
<table cellspacing=0>
<% @results.each_with_index do |result,i| %>
	<tr class=<%= cycle ('odd', 'even')%> >
		<td valign="top" align="center">
		<%= i + 1 %>
		</td>
		<td valign="top" align="center">
		<div class='photo'>
		
			<a href="<%=result[:photo].url(:original)%>" rel="lightbox[result]" title="Result <%=i+1%>">		
			<%= image_tag result[:photo].url(:medium) %>
			</a>
		
		</div>
		</td>
		<td align="left">
			<%= result[:text] %>

		</td>
	</tr>
<% end %>
</table>
</div>
Scroll down to see more results
</td>
</tr>
</table>
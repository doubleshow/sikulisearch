<style>

body, p, td, th, li
{
	font-size: 90%;
	color: #333333;
	font-family: Arial,Helvetica,sans-serif;
	padding: 0px;
	margin: 0px;
}

.banner{
width:100%;
background:black;
padding-top:2px;
padding-bottom:2px;
color:white;
text-align:left;
}

.banner a, .banner a:visited{
/*text-decoration: none;*/
color: white;
}
	
#matches {
/*	height: 800px;*/
/*	width: 600px;*/
/*	overflow: auto;*/
	border: 1px solid #cccccc;
}	
#matches td {
	border-bottom:1px solid #cccccc;
}

.photo img{
	border: 1px #cccccc solid;
	padding: 2px;
}

.odd {
/*	background-color:  #E9E9E9;*/
}


.url {
	color: #008200;
}

.title {
	font-size: 14px;
}


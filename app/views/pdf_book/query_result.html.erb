<div style="width:1200px;border:black 1px solid;">


<div class="banner">
&nbsp; SIKULI Search Demo 
</div>

<table style="width:100%;height:100%;margin:2px;">
	<tr><td valign="top">

	
	<table>
			
		<tr>
		<td valign="top">
			<div id="query" class='photo'>
			Keywords:<br>			
			<%= text_field_tag 'dd', @query_terms,  :readonly => true %>
			<br>		
			Screenshot:<br>
			<%= image_tag @query.photo.url(:medium) %><br>
			</div>

		<% if @results.size > 0 %>			
			<div id="figure_image" class='photo'>
			
			Selected Match:<br>			

			<%= render :partial => 'figure_image', :locals => {:figure => @results[0][:figure]} %>
			
			</div>			
		<% end %>
	
		</td>
	
		<td valign="top">	
			<%= render :partial =>'matches'%>
		</td>
	
		</tr>
	</table>
	

	</td>

	<td id="page_image">

		<% if @results.size > 0 %>
		<%= render :partial => 'page_image', :locals => {:page => @results[0][:page]} %>
		<% end %>
	
	</td>
</tr>
</table>

